<UserControl x:Class="PixConvert.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">

    <!-- 사이드바 버튼 스타일 정의 -->
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- 사이드바 -->
    <ScrollViewer PanningMode="VerticalOnly"
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Border Padding="12"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">
                
                <!-- 파일 추가/삭제 -->
                <StackPanel Orientation="Vertical">
                    <Button Content="{DynamicResource Btn_AddFile}"
                            Command="{Binding AddFilesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="{DynamicResource Btn_AddFolder}"
                            Command="{Binding AddFolderCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />

                    <Button Content="{DynamicResource Btn_ListClear}"
                            Command="{Binding ListClearCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />

                    <Separator Margin="0,0,0,8" />

                    <!-- 변환 설정 및 변환 -->
                    <Button Content="{DynamicResource Btn_ConvertSetting}"
                            Command="{Binding OpenConvertSettingCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="{DynamicResource Btn_Convert}"
                            Command="{Binding ConvertFilesCommand}"
                            Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,0,0,8" />

                <!-- 정렬 -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="0,0,0,4"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="{DynamicResource Sort_Label}" />
                    <ComboBox HorizontalAlignment="Stretch"
                              Margin="0,0,0,2"
                              ItemsSource="{Binding Settings.SortOptions}"
                              SelectedItem="{Binding Settings.SelectedSortOption}"
                              DisplayMemberPath="Display" />
                    <ui:ToggleSwitch IsOn="{Binding Settings.IsSortAscending}"
                                     OnContent="{DynamicResource Sort_Asc}"
                                     OffContent="{DynamicResource Sort_Desc}" />
                    <ui:ToggleSwitch IsOn="{Binding Settings.ShowMismatchOnly}"
                                     OnContent="{DynamicResource Option_MismatchOnly}"
                                     OffContent="{DynamicResource Option_MismatchOnly}"
                                     ToolTip="{DynamicResource Tip_MismatchOnly}"
                                     Margin="0,0,0,4"/>
                    <Button Content="{DynamicResource Btn_ReorderIndex}"
                            Command="{Binding ReorderNumberCommand}"
                            ToolTip="{DynamicResource Tip_FilteredNoReorder}"
                            ToolTipService.ShowOnDisabled="True"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,0,0,8" />

                <!-- 기타 -->
                <StackPanel Orientation="Vertical">
                    <Grid Margin="0">
                        <CheckBox Content="{DynamicResource Option_ConfirmDeletion}"
                                  IsChecked="{Binding Settings.ConfirmDeletion}"
                                  VerticalAlignment="Center"/>
                        <Image Source="{StaticResource HelpIcon}"
                               Width="12" Height="12"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               ToolTip="{DynamicResource Tip_ConfirmDeletion}" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
