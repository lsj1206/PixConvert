<UserControl x:Class="PixConvert.Views.Controls.FileListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:PixConvert.Models"
             xmlns:converters="clr-namespace:PixConvert.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- 컨버터 -->
        <converters:StatusToTextConverter x:Key="StatusToTextConverter"/>
        <converters:ProgressToGridWidthConverter x:Key="ProgressToGridWidthConverter"/>

        <!-- 파일 리스트 스타일 -->
        <SolidColorBrush x:Key="ItemHoverBackground" Color="#E5F3FF"/>
        <SolidColorBrush x:Key="ItemSelectedBackground" Color="#CCE8FF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666666"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D4"/>

        <!-- ListViewItem 스타일 -->
        <Style x:Key="FileItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="4,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- 파일 템플릿 -->
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="bd"
                                SnapsToDevicePixels="true"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ItemHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ItemSelectedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ListView x:Name="FileListView"
                  BorderThickness="0"
                  Background="Transparent"
                  SelectionMode="Extended"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ItemsSource="{Binding Items}"
                  ItemContainerStyle="{StaticResource FileItemContainerStyle}"
                  AllowDrop="True"
                  KeyDown="ListView_KeyDown"
                  Drop="FileListView_Drop"
                  DragLeave="FileListView_DragLeave"
                  MouseMove="FileListView_MouseMove"
                  GridViewColumnHeader.Click="Header_Click"
                  PreviewDragOver="FileListView_PreviewDragOver"
                  PreviewMouseLeftButtonDown="FileListView_PreviewMouseLeftButtonDown"
                  PreviewMouseLeftButtonUp="FileListView_PreviewMouseLeftButtonUp"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.CacheLength="20,20"
                  VirtualizingPanel.CacheLengthUnit="Item">
            <ListView.View>
                <!-- GridView -->
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <!-- 헤더 스타일 -->
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>

                    <!-- 번호 -->
                    <GridViewColumn Width="60">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_Index}" Tag="AddIndex"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextSecondary}"
                                           Text="{Binding AddIndex}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 파일명 -->
                    <GridViewColumn Width="250">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_Name}" Tag="NameIndex"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Name}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 확장자 -->
                    <GridViewColumn Width="62">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_ExtensionToPath}" Tag="Extension"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{StaticResource TextSecondary}"
                                           Text="{Binding Extension}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 파일 시그니처(포맷) -->
                    <GridViewColumn Width="68">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_FileSignature}" Tag="Signature"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileSignature}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <!-- 기본 색상 -->
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                            <Style.Triggers>
                                                <!-- 확장자-포맷 불일치 시 빨간색 표시 -->
                                                <DataTrigger Binding="{Binding IsMismatch}" Value="True">
                                                    <Setter Property="Foreground" Value="#FF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 파일 크기 -->
                    <GridViewColumn Width="80">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_Size}" Tag="Size"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{StaticResource TextSecondary}"
                                           Text="{Binding DisplaySize}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 경로 -->
                    <GridViewColumn Header="{DynamicResource List_Path}" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#999999"
                                           TextTrimming="CharacterEllipsis"
                                           Text="{Binding Directory}"
                                           ToolTip="{Binding Path}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 상태 -->
                    <GridViewColumn Width="90">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="{DynamicResource List_Status}" Tag="Status"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Margin="-6,0" x:Name="StatusGrid">
                                    <!-- 배경 게이지 (배터리 효과) -->
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding Progress, Converter={StaticResource ProgressToGridWidthConverter}}"/>
                                            <ColumnDefinition Width="{Binding Progress, Converter={StaticResource ProgressToGridWidthConverter}, ConverterParameter=Invert}">
                                                <ColumnDefinition.Style>
                                                    <Style TargetType="ColumnDefinition">
                                                        <Setter Property="Width" Value="*"/>
                                                        <Style.Triggers>
                                                            <!-- 진행률이 100이면 오른쪽 공간을 0으로 -->
                                                            <DataTrigger Binding="{Binding Progress}" Value="100">
                                                                <Setter Property="Width" Value="0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ColumnDefinition.Style>
                                            </ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" x:Name="ProgressBorder" Background="#1A4CAF50"/>
                                    </Grid>

                                    <!-- 텍스트 -->
                                    <TextBlock x:Name="StatusLabel"
                                               Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextSecondary}"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <!-- Processing: 보더 불투명도 조절 -->
                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                        <Setter TargetName="ProgressBorder" Property="Background" Value="#334CAF50"/>
                                        <Setter TargetName="StatusLabel" Property="Foreground" Value="#2E7D32"/>
                                    </DataTrigger>
                                    <!-- Success: 진한 초록색 배경 유지 -->
                                    <DataTrigger Binding="{Binding Status}" Value="Success">
                                        <Setter TargetName="ProgressBorder" Property="Background" Value="#4D4CAF50"/>
                                        <Setter TargetName="StatusLabel" Property="Foreground" Value="#1B5E20"/>
                                    </DataTrigger>
                                    <!-- Error: 노란색/주황색 배경 -->
                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                        <Setter TargetName="ProgressBorder" Property="Background" Value="#4DFFC107"/>
                                        <Setter TargetName="StatusLabel" Property="Foreground" Value="#F57F17"/>
                                    </DataTrigger>
                                    <!-- Unsupported: 회색 -->
                                    <DataTrigger Binding="{Binding Status}" Value="Unsupported">
                                        <Setter TargetName="StatusLabel" Property="Foreground" Value="#9E9E9E"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- 드롭 위치 표시선 -->
        <Canvas x:Name="DragAdornerCanvas" IsHitTestVisible="False">
            <Border x:Name="DropIndicator"
                    HorizontalAlignment="Stretch"
                    Width="{Binding ActualWidth, ElementName=FileListView}"
                    Height="1"
                    CornerRadius="1.5"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="#0078D4" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#0078D4" Offset="0" />
                        <GradientStop Color="#0078D4" Offset="0.85" />
                        <GradientStop Color="Transparent" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
