<Application x:Class="PixConvert.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PixConvert"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:PixConvert.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="Themes/Generic.xaml" />
                <ResourceDictionary Source="Resources/Icons/help.xaml" />
                <ResourceDictionary Source="Resources/Languages/Lang.Serilog.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:AppStatusToVisibilityConverter x:Key="AppStatusToVisibilityConverter" />
            <converters:AppStatusToInverseBooleanConverter x:Key="AppStatusToInverseBooleanConverter" />
            <converters:StatusToTextConverter x:Key="StatusToTextConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
